<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewsAddActivity" >

    <EditText
        android:id="@+id/etNewsAddContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNewsAddTitle"
        android:layout_alignRight="@+id/etNewsAddTitle"
        android:layout_below="@+id/etNewsAddTitle"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="新闻内容"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="7" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etNewsAddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNewsAddUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="标题"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnNewsAddCancel"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/btnNewsAddAdd"
        android:layout_alignBottom="@+id/btnNewsAddAdd"
        android:layout_alignRight="@+id/etNewsAddContext"
        android:text="取消" />

    <TextView
        android:id="@+id/tvNewsAddUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNewsAddTitle"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnNewsAddAdd"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etNewsAddContext"
        android:layout_below="@+id/etNewsAddContext"
        android:layout_marginTop="22dp"
        android:text="新增" />

</RelativeLayout>