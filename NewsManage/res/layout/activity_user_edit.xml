<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserEditActivity" >

    <TextView
        android:id="@+id/tvNewsCardUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:ems="4"
        android:text="@string/LoginName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EtUserEditPassword"
        android:ems="4"
        android:text="@string/LoginPassword"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUserEditCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/EtUserEditPassword"
        android:layout_below="@+id/EtUserEditPassword"
        android:layout_marginRight="18dp"
        android:layout_marginTop="42dp"
        android:text="返回" />

    <Button
        android:id="@+id/btnUserEditChangePwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnUserEditCancel"
        android:layout_alignBottom="@+id/btnUserEditCancel"
        android:layout_alignLeft="@+id/tvPassword"
        android:layout_marginLeft="45dp"
        android:text="修改密码" />

    <EditText
        android:id="@+id/EtUserEditPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvUserEditName"
        android:layout_marginRight="18dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvUserEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNewsCardUserName"
        android:layout_alignBottom="@+id/tvNewsCardUserName"
        android:layout_toLeftOf="@+id/btnUserEditCancel"
        android:ems="4"
        android:text="11111"
        android:textSize="20sp" />

</RelativeLayout>