<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewsCardActivity" >

    <TextView
        android:id="@+id/tvNewsCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="38dp"
        android:text="标题:" />

    <TextView
        android:id="@+id/tvNewsCardDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNewsCardUserName"
        android:layout_below="@+id/tvNewsCardUserName"
        android:layout_marginTop="25dp"
        android:text="时间:" />

    <TextView
        android:id="@+id/tvNewsCardUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNewsCardTitle"
        android:layout_below="@+id/tvNewsCardTitle"
        android:layout_marginTop="17dp"
        android:text="作者:" />

    <TextView
        android:id="@+id/tvNewsCardContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNewsCardDateTime"
        android:layout_below="@+id/tvNewsCardDateTime"
        android:layout_marginTop="27dp"
        android:text="内容:" />

    <Button
        android:id="@+id/btnNewsCardEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNewsCardContext"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="111dp"
        android:text="编辑" />

    <Button
        android:id="@+id/btnNewsCardCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnNewsCardEdit"
        android:layout_alignBottom="@+id/btnNewsCardEdit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp"
        android:text="返回列表" />

    <Button
        android:id="@+id/btnNewsCardDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnNewsCardCancel"
        android:layout_alignBottom="@+id/btnNewsCardCancel"
        android:layout_centerHorizontal="true"
        android:text="删除新闻" />

</RelativeLayout>